<robot name="t_shape">
  <link name="horizontal_bar">
    <visual>
      <geometry>
        <box size="0.15 0.02 0.05"/> 
      </geometry>
      <origin xyz="0 0.05 0"/> 
      <material name="invisible">
        <color rgba="0 0 0 0"/>
      </material>
    </visual>
  </link>

  
  <link name="vertical_bar">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.10"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
